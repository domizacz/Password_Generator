@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<div class="form-group">
    <label class="btn-outline-info">Random Password</label>
    <input type="text" class="btn btn-dark" @bind-value="password">
    <button type="submit" class="btn btn-primary" @onclick="@lotery">Submit</button>
</div>

@code
{
    [Parameter] public string password { get; set; }
    private Random random = new Random();
    private void lotery()
    {

        password = null;
        for (int i = 0; i < 10; i++)
        {
            int a = 0;
            a = random.Next(0,3);
            if(a==1)
            { password = password + Lowercase(); }
            if (a == 2)
            { password = password + Uppercase(); }
            if (a == 0)
            { password = password + number(); }
        }
    }

    private string number()
    {
        return (random.Next(0, 9).ToString());
    }
    private string Lowercase()
    {
        char randomChar = (char)random.Next('a', 'z');
        return (randomChar.ToString()) ;
    }
    private string Uppercase()
    {
        char randomChar = (char)random.Next('A', 'Z');
        return (randomChar.ToString());
    }

}